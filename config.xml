<?xml version='1.0' encoding='utf-8'?>
<widget id="com.mmarcot.pong" version="1.1.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Ping Pong Classic Arcade Fun</name>
    <description>
			Ping Pong Classic Arcade Fun is a pong like retro game, use your racket to send back the ball
    </description>
    <author email="mmarcot@gmail.com">
			Mallory Marcot
    </author>

    <content src="index.html" />
    <access origin="*" />

	<preference name="orientation" value="portrait"/>
	<preference name="fullscreen" value="true"/>

    <preference name="SplashScreen" value="splash" />
    <preference name="SplashScreenDelay" value="3000" />

    <icon src="icon.png"/>

</widget>
